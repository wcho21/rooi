---
interface Props {
  heading: string,
  date: string,
}

const { date, heading } = Astro.props;
---

<li class="mb-6 ml-4">
  <div class="absolute w-3 h-3 bg-slate-700 rounded-full mt-1.5 -left-1.5 border border-gray-900"></div>
  <time class="mb-1 text-sm leading-none text-slate-400">{date}</time>
  <h3 class="text-lg font-semibold text-slate-200">{heading}</h3>
  <p class="mb-4 font-light text-slate-400"><slot /></p>
</li>
